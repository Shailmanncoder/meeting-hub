<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meeting Hub</title>
    <style>
        /* RESET BODY so it doesn't conflict with other pages */
        body {
            margin: 0; padding: 0;
            background-color: #121212;
            font-family: sans-serif;
            color: white;
            height: 100vh;
            width: 100vw;
            overflow: hidden;
        }

        .home-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            width: 100%;
            flex-direction: column;
        }

        .card {
            background: #1E1E1E;
            padding: 30px;
            border-radius: 12px;
            width: 400px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
            text-align: center;
            border: 1px solid #333;
        }

        .btn-group { display: flex; justify-content: space-between; margin-bottom: 20px; border-bottom: 1px solid #333; }
        .tab-btn {
            background: none; border: none; color: #888; font-size: 16px; font-weight: bold;
            cursor: pointer; padding: 10px; width: 50%;
        }
        .tab-btn.active { color: #00d2ff; border-bottom: 3px solid #00d2ff; }
        
        input {
            width: 100%; padding: 12px; margin: 8px 0; background: #2A2A2A;
            border: 1px solid #444; color: white; border-radius: 6px; outline: none; box-sizing: border-box;
        }
        input:focus { border-color: #00d2ff; }
        
        button.action-btn {
            width: 100%; padding: 12px; background: #00d2ff; color: #000;
            border: none; font-weight: bold; font-size: 16px;
            border-radius: 6px; cursor: pointer; margin-top: 15px;
        }
        button.action-btn:hover { background: #00b8e6; }
        .hidden { display: none; }
        
        #generated-link-area {
            margin-top: 20px; padding: 15px; background: #181818;
            border: 1px dashed #555; display: none; border-radius: 6px;
        }
        #link-text {
            word-break: break-all; font-family: monospace; color: #00d2ff;
            margin-bottom: 10px; font-size: 0.9rem;
        }
        .copy-btn {
            background: #444; color: white; border: none; padding: 5px 15px;
            border-radius: 4px; cursor: pointer; font-size: 0.8rem;
        }
    </style>
</head>
<body>
    <div class="home-container">
        <h1 style="color:#00d2ff; margin-bottom:20px;">Meeting Hub</h1>
        <div class="card">
            <div class="btn-group">
                <button class="tab-btn active" onclick="switchTab('create')">Create Meeting</button>
                <button class="tab-btn" onclick="switchTab('join')">Join Meeting</button>
            </div>

            <div id="create-section">
                <input type="text" id="create-name" placeholder="Your Name (Host)">
                <input type="text" id="create-topic" placeholder="Meeting Name (e.g., Science Class)">
                <button class="action-btn" onclick="generateLink()">Generate Link</button>
                
                <div id="generated-link-area">
                    <p style="font-size:0.8rem; color:#aaa; margin-bottom:5px;">Share this link:</p>
                    <div id="link-text">...</div>
                    <button class="copy-btn" onclick="copyLink()">Copy Link</button>
                    <button class="action-btn" style="background:#27AE60; color:white;" onclick="enterAsHost()">Start Meeting</button>
                </div>
            </div>

            <div id="join-section" class="hidden">
                <input type="text" id="join-name" placeholder="Your Name">
                <input type="text" id="meeting-id" placeholder="Paste Meeting Link Here">
                <button class="action-btn" onclick="joinMeeting()">Join Meeting</button>
            </div>
        </div>
    </div>

    <script>
        let generatedRoomId = "";
        let generatedTopic = "";

        function switchTab(tab) {
            document.getElementById('create-section').classList.toggle('hidden', tab !== 'create');
            document.getElementById('join-section').classList.toggle('hidden', tab !== 'join');
            document.querySelectorAll('.tab-btn')[0].classList.toggle('active', tab === 'create');
            document.querySelectorAll('.tab-btn')[1].classList.toggle('active', tab === 'join');
        }

        async function generateLink() {
            const name = document.getElementById('create-name').value;
            const topic = document.getElementById('create-topic').value;
            
            if(!name || !topic) return alert("Please enter Name and Meeting Topic!");

            // API Call
            const response = await fetch('/api/new-room');
            const data = await response.json();
            generatedRoomId = data.roomId;
            generatedTopic = topic;

            // Show Link
            const shareableLink = window.location.origin + "/" + generatedRoomId + "?topic=" + encodeURIComponent(topic);
            document.getElementById('link-text').innerText = shareableLink;
            document.getElementById('generated-link-area').style.display = 'block';
        }

        function copyLink() {
            const text = document.getElementById('link-text').innerText;
            navigator.clipboard.writeText(text);
            alert("Link copied!");
        }

        function enterAsHost() {
            const name = document.getElementById('create-name').value;
            window.location.href = `/${generatedRoomId}?name=${encodeURIComponent(name)}&host=true&topic=${encodeURIComponent(generatedTopic)}`;
        }

        function joinMeeting() {
            const name = document.getElementById('join-name').value;
            let link = document.getElementById('meeting-id').value;
            if(!name || !link) return alert("Please fill in all fields!");
            
            if (link.includes("?")) {
                const urlObj = new URL(link);
                urlObj.searchParams.set('name', name);
                window.location.href = urlObj.toString();
            } else {
                let roomId = link.split('/').pop(); 
                window.location.href = `/${roomId}?name=${encodeURIComponent(name)}`;
            }
        }
    </script>
</body>
</html>